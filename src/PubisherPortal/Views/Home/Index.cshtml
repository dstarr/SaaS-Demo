@model PubisherPortal.ViewModels.Home.IndexViewModel
@{
    ViewData["Title"] = "Subscriptions Management Page";
}

@if (ViewBag.Message != null)
{
    <h2>@ViewBag.Message</h2>
}
else
{
    <div class="main-content text-center">

        <h3>Manage All Subscriptions</h3>

        <table class="main-table">
            <thead><tr><th>Subscription Name</th><th>Offer ID</th><th>Plan ID</th><th>Status</th></tr></thead>
            <tbody>
            @foreach (var subscription in Model.Subscriptions)
            {
                <tr>
                    <td class="main-td">@Html.ActionLink(@subscription.Name, "Subscription", new { id = @subscription.Id })</td>
                    <td class="main-td">@subscription.OfferId</td>
                    <td class="main-td">@subscription.PlanId</td>
                    <td>@subscription.SaasSubscriptionStatus.Value</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}